<h3 style="text-align:center">Admission Seat Plan has Published</h3>
<%= form_tag nstuseatplans_path, :method => 'get' do %>
<div align="center">
Enter Admission Test Roll<br/>
<%= text_field_tag :search, params[:search], class: "", placeholder: "Roll no.",:size=>50  %><br/>
<%= submit_tag "Check", :class=>"btn-primary btn-success" ,:title => nil %>
</div>  
<% end %>
<hr>
<% if params[:search].to_i.between?(1,10) %>
<div style="text-align:center; color:red">Noakhali College</div>
<% else if params[:search].to_i.between?(11,20)%>
<div style="text-align:center; color:red">Noakhali Science & Technology University </div>
<% else if params[:search].to_i.between?(21,30)%>
<div style="text-align:center; color:red">Noakhali Mohila College </div>
<% else if params[:search].to_i.between?(31,40)%>
<div style="text-align:center; color:red">Noakhali Institute</div>
<% else %>
<% end %>
<% end %>
<% end %>
<% end %>
</div> 